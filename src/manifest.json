{
  "manifest_version": 3,
  "name": "TabStack",
  "version": "1.0.0",
  "description": "Advanced tab manager with smart search, grouping, and bulk operations",
  "permissions": [
    "tabs",
    "storage",
    "bookmarks"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TabStack - Search Tabs",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
